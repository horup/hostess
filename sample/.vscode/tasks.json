{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "sample: server run"
		},
		{
			"type": "cargo",
			"command": "watch",
			"args": ["-i", ".gitignore", "-i", "public/*", "-i", "target/*", "-s", "wasm-pack build --target web --out-dir public/pkg"],
			"group": "build",
			"label": "sample: client build"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "sample: run"
		},
		{
			"type": "cargo",
			"command": "watch",
			"problemMatcher": [
				"$rustc"
			], 
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn":["sample: run", "sample: client build"],
			"label": "sample: all",
		}
	]
}